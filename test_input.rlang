ENVIRONMENT WarehouseGuard {
    STATE {
        pos_y: continuous(0.0, 10.0);
        battery: continuous(0.0, 100.0);
        charge: continuous(0.0, 100.0);
        score: continuous(0.0, 100.0);
        mode: discrete[Patrol, Chase];
    }

    ACTIONS {
        move,stop
    }


    DYNAMICS {
        always {
            battery = battery - 0.1;
            charge=charge*0.9
        }
        when (action in [move]) {
            if (battery > 0){
                if (charge>0){
                    match ACTION {
                        move -> pos_x = pos_y + 1;
                    }
                }
            }
        }
    }

    REWARDS {
        if (battery == 0) -> score -100;
    }
}